/* pages/index/index.wxss */
@import "../common/lib/weui.wxss";

.flash-container {
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.flash-text {
  font-size: 20pt;
  color: #09bb07;
}

.placeholder {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  height: 6.3em;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font: bold;
  font-size: 24px;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  z-index: 1;
  display: flex;
}

.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
