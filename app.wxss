/**app.wxss**/

/* page */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page-head{
  padding: 60rpx 50rpx 40rpx;
  text-align: center;
}
.page-head-title{
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #353535;
}
.page-head-line{
  margin: 0 auto;
  width: 250rpx;
  height: 2rpx;
  background-color: #D8D8D8;
}
.page-head-desc{
  padding-top: 20rpx;
  color: #9B9B9B;
  font-size: 32rpx;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}
.page-body-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.page-foot{
  margin: 50rpx 0 30rpx 0;
  text-align: center;
  color: #1aad19;
  font-size: 0;
}
.page-foot-title{
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 20rpx;
  color: #B2B2B2;
}

.page-section{
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.page_bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}